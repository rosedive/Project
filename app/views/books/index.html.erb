<p id="notice"><%= notice %></p>

<h1>Books</h1><br/><br/>

<table class="table table-striped table-dark" id="table">
  <thead>
    <tr class="table-primary" style="color:black;">

      <th scope="col">Book_title</th>
      <th scope="col">Author</th>
      <th scope="col">Status</th>
      <th scope="col">Photo</th>
      <th scope="col">Action</th>
      <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.book_title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.photo %></td>
        <td><%= link_to 'Show', book, class:"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class:"btn btn-primary" %></td>
        <td><%= link_to 'Destroy',  book,  method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

<br>

