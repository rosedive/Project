<%= form_with(scope: :session, url: users_path, local: true) do |form| %>
<p id='alert'><%= alert %></p>
<h1>Login</h1><br>
 <div class=”field”>
   <%= f.email_field :email %>
 </div>
 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
 <div class='field'>
   <%= f.password_field :password %>
 </div>
 <div class='actions'>
   <%= f.submit "Login", class: 'btn btn-success' %>
 </div>
<% end %>


